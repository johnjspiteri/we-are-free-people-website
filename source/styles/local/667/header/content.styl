#community-header
	padding-bottom: 12px

	&__container
		width 627px

	&__brand
		width 38px
		height 50px
		margin 0 14px 0 0

	&__name
		width 326px

		h1
			margin-bottom: 8px
			font-size 18px
			line-height 25px

		h2
			font-size 15px
			line-height 15px

	&__mobile
		margin 2px 0 0 0

	&__bars
		font-size 25px
		line-height 19px

	&__consultation.small
		display: none;
		float: left;
		width: 100px
		background: $accent-color
		border-radius: 10px
		padding: 10px

		h3
			float: left;
			width: 100%
			margin: 0
			padding: 0
			font-size: 15px
			text-align: center;
			line-height 15px
