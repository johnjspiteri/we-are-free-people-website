#header
	&__navigation
		display block
		float: right
		width: 100%
		margin 0
		padding: 0

		&__container
			margin 0
			padding 0
			background none
			border none

.header
	&__button
		float right
		height 51px
		padding 0 30px
		margin 0
		background $secondary-background-color
		border-left $secondary-border
		border-bottom $secondary-border
		border-radius none
		cursor pointer

		h3
			float left
			width 100%
			padding 0
			margin 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 13px
			line-height 53px
			color $black-color
			border none
			text-align center

	&__button.active
		height: 52px
		background $primary-background-color
		margin -1px 0 0 0

		h3
			color $paragraph
			line-height 54px

	&__button.end.active
		background $background
		border-bottom none
		border-right none

		h3
			color $paragraph
