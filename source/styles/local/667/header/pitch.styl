#header-pitch
	padding 0 0 9px 0

	&__container
		width 647px

		h1
			font-size 13px

		p
			font-size 12px
			line-height 18px
			text-align right

	&__title
		width 98px
		margin 0 12px 0 0
		padding 11px 0 7px 13px

		h1
			line-height 19px

		h1.small
			display: block

		h1.medium
			display: none

	&__arrow
		margin 2px 0 0 6px
		font-size 17px

	&__time
		width 207px
		margin 6px 10px 0 0

	&__paragraph
		width 186px
		margin 6px 0 0 0
		padding 0 12px 0 0

		p.small
			display block

		p.large
			display none

	&__close
		width: 44px
		height: 44px

	&__triangle
		border-top: 44px solid $black-color
		border-left: 44px solid transparent;

	&__times
		width: 22px
		height: 22px
		font-size 18px

.header-pitch-square
	width: 62px
	margin 0 7px 0 0

	h3
		height 17px
		font-size 9px

	&__value
		width: 29px
		height: 36px
		margin 0 4px 0 0

	&__value:last-child
		margin: 0

	&__half
		width: 29px
		height: 18px

	&__number
		width 29px
		height 35px

		h4
			font-size 16px

.header-pitch-square:last-child
	margin: 0

.header-pitch-button
	width 134px
	margin 6px 0 0 0
	padding 5px 18px 6px 18px

	h1
		line-height 19px

	h1.small
		display: block

	h1.large
		display: none
