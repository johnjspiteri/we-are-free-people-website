#header-pitch
	padding 0 0 10px 0

	&__content
		width 647px

		p
			font-size 12px
			line-height 17px
			text-align right

		p.small
			display: block

		p.large
			display: none

	&__title
		width 98px
		margin 0 10px 0 0
		padding 14px 10px 5px 12px

		h1
			font-size 13px
			line-height 18px

	&__arrow
		margin 0 0 0 6px
		font-size 18px

	&__time
		width 204px
		margin: 0 10px 0 0

	&__paragraph
		width 157px
		margin 7px 12px 0 0
		padding: 0 0 0 2px

.header-pitch-square
	width: 62px
	margin 5px 6px 0 0

	h3
		height 17px
		font-size 10px

	&__value
		width: 29px
		height: 36px
		margin 0 4px 0 0

	&__value:last-child
		margin: 0

	&__half
		width: 29px
		height: 18px

	&__number
		width 29px
		height 37px

		h4
			font-size 17px

.header-pitch-square:last-child
	margin: 5px 0 0 0

.header-pitch-button
	width 156px
	margin 6px 0 0 0
	padding 7px 14px 5px 14px

	h2
		font-size 13px
		line-height 18px
