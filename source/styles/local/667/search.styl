#search
	width 627px
	margin 0 0 28px 20px

	&__container
		width 595px
		padding 20px 0 20px 30px

	&__category
		width 267px
		margin 0 30px 20px 0

	&__subcategory
		width 267px

		&__select
			width 100%

			select
				height 54px
				font-size 19px
				line-height 56px

	&__mask
		width 233px
		height 52px
		padding 0 20px

		h4
			font-size 17px
			line-height 58px

			&__caret-down
				right 22px
				font-size 19px
				line-height 54px

	&__filter
		width 492px
		margin 0 19px 0 0

		input
			width: 450px
			height 52px
			padding 0 20px
			font-size 18px

	&__reset
		display block
		float left
		width 52px
		height 52px
		padding 0
		margin 0
		background $accent-color-light
		border $black-border-color
		border-radius 8px

	&__tag
		display: none

	&__resetIcon
		font-size 16px
		line-height 56px
