#header-pitch
	padding 0 0 8px 0

	&__container
		width 748px

		h1
			font-size 12px

		p
			font-size 11px
			line-height 16px

	&__title
		width 124px
		margin 0 12px 0 0
		padding 12px 10px 7px 12px

		h1
			line-height 17px

		h1.small
			display none

		h1.large
			display block

	&__arrow
		margin 2px 0 0 5px
		font-size 16px

	&__time
		width 198px
		margin 7px 10px 0 0

	&__paragraph
		width 248px
		margin 8px 0 0 0
		padding 0 11px 0 8px

		p.small
			display none

		p.large
			display block

	&__close
		width: 44px
		height: 44px

	&__triangle
		border-top: 44px solid $black-color
		border-left: 44px solid transparent;

	&__times
		width: 22px
		height: 22px
		font-size 18px

.header-pitch-square
	width 62px
	margin 0 6px 0 0

	h3
		height 15px
		font-size 8px

	&__value
		width 29px
		height 34px
		margin 0 4px 0 0

	&__value:last-child
		margin 0

	&__half
		width 29px
		height 17px

	&__number
		width 29px
		height 33px

		h4
			font-size 15px

.header-pitch-square:last-child
	margin 0

.header-pitch-button
	width 150px
	margin 9px 0 0 0
	padding 5px 12px 5px 12px

	h1
		line-height 17px

	h1.small
		display: none

	h1.large
		display: block
