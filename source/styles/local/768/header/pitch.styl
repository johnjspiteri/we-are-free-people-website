#header-pitch
	padding 0 0 8px 0

	&__content
		width 748px

		p
			font-size 11px
			line-height 16px

		p.small
			display none

		p.large
			display block

	&__title
		width 98px
		margin 0 12px 0 0
		padding 14px 10px 5px 14px

		h1
			font-size 12px
			line-height 17px

	&__arrow
		margin 0 0 0 6px
		font-size 18px

	&__time
		width 198px
		margin 0 10px 0 0

	&__paragraph
		width 270px
		margin 7px 10px 0 0
		padding 0 0 0 20px

.header-pitch-square
	width 62px
	margin 5px 6px 0 0

	h3
		height 15px
		font-size 9px

	&__value
		width 29px
		height 36px
		margin 0 4px 0 0

	&__value:last-child
		margin 0

	&__half
		width 29px
		height 18px

	&__number
		width 29px
		height 37px

		h4
			font-size 17px

.header-pitch-square:last-child
	margin 5px 0 0 0

.header-pitch-button
	width 150px
	margin 6px 0 0 0
	padding 7px 18px 5px 18px

	h2
		font-size 12px
		line-height 17px
