#header-pitch
	padding 0 0 12px 0

	&__container
		width 728px

		h2
		h1
			font-size 15px

		h2
			font-size 14px

		p
			font-size 10px
			line-height 20px

	&__title
		width 270px
		margin 0 0 14px 0
		padding 7px 0 9px 0

		h1
			line-height 20px

	&__arrow
		margin 2px 0 0 6px
		padding 0
		font-size 17px

	&__time
		width 272px
		margin 0

	&__paragraph
		width: 209px
		margin 12px 10px 20px 0
		padding 0

		p.small
			display block

		p.large
			display none

	&__holder
		width: 270px
		margin: 0 20px 0 0

	&__review
		display block
		float left
		width 209px
		margin 10px 0 0 10px
		padding 0

	&__close
		width: 50px
		height: 50px

	&__triangle
		border-top: 50px solid $black-color
		border-left: 50px solid transparent;

	&__times
		width: 25px
		height: 25px
		font-size 22px

.header-pitch-square
	width 84px
	margin 0 10px 0 0

	h3
		height 18px
		font-size 9px

	&__value
		width: 39px
		height: 42px
		margin 0 6px 0 0

	&__half
		width 38px
		height 21px

	&__number
		width 38px
		height 40px

		h4
			font-size 19px

.header-pitch-button
	width 209px
	height: 40px
	margin 0 20px 0 0
	padding 7px 0 9px 0

.header-pitch-button:last-child
	display block
	margin: 0
	background #333
	border #000
	border-bottom 3px solid #000

	h2
		color $white-color
