#header
	padding 18px 0 20px 0

	&__container
		width 728px

	&__brand
		width 486px

		h1
			margin: 0 14px 0 0
			font-size 18px
			line-height 23px

		h2
			width: 220px
			margin: 6px 0 0 0
			font-size 14px
			line-height 14px

	&__outline
		width 24px
		height 24px
		margin 0 12px 0 0

	&__white
		width 8px
		height 8px
		margin 8px 0 0 8px

	&__mobile
		display none

	&__navigation
		display block
		float: left
		width: 100%
		margin 0
		padding: 0

		&__container
			margin 0
			padding 0
			background none
			border none

.header
	&__tile
		float left
		height 47px
		padding 0 32px
		margin 0
		background $primary-background-color
		border none
		border-right $primary-border
		border-bottom $primary-border
		border-radius none
		cursor pointer

		h3
			float left
			width 100%
			padding 0
			margin 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 11px
			line-height 49px
			color $black-color
			border none
			text-align center

	&__tile.active
		height: 48px
		background $secondary-background-color
		margin -1px 0 0 0

		h3
			color $paragraph

	&__tile.end.active
		background $background
		border-bottom none
		border-right none

		h3
			color $paragraph
