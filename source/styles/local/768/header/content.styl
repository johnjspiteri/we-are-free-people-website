		//	padding: 0
		//	font-size: 15px
		//	text-align: center;
		//	line-height 15px

#community-header-navigation
	display block

	&__container
		float: right
		width 340px
		margin 0
		padding 0

		h3
			float: right
			margin: 0 0 0 8px
			padding 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 15px
			line-height: 15px
			font-style: italic
			color $paragraph-color
			text-align right

		h2.active
			margin -1px 0 0 0

		h2:last-child
			border-radius 0 0 10px 0
