#community-about
	float left
	width 320px
	padding 24px 0 24px 0
	margin 0 0 30px 0
	border-top $border-secondary
	border-bottom $border-secondary
	background $color-secondary

	h1
		width 290px
		padding 0
		margin 0 0 16px 15px
		font-family $font-primary
		font-weight $font-weight-primary-400
		font-size 18px
		line-height 28px
		color $color-black
		text-align left

	span
		float left
		width 300px
		padding 0
		margin 4px 0 12px 15px
		font-size 14px
		line-height 27px
		font-family $font-primary
		font-weight $font-weight-primary-400
		color $color-black
		text-align left

	p
		width 300px
		margin 0 0 18px 15px
		font-size 14px
		line-height 31px
		font-family $font-primary
		font-weight $font-weight-primary-400
		color $color-paragraph

		a
			color $red

	p.desktop
		display: none

	&__profile
		display none

	&__signature
		float: left;
		margin-left: 10px
		width 100%

		img
			float: left;
			width 295px
			height 120px
			background #e1e1e1

	&__media
		float left
		width 360px
		height 180px
		margin 0 0 28px 0
		border-top $border-secondary
		border-bottom $border-secondary
		background #e8e8e8

		img
		video
			position relative
			width 100%
			height 100%

	&__image
		float left
		width 320px
		height 260px
		margin 0 2px 10px 30px

		img
		video
			float left
			width 100%
			height 100%
