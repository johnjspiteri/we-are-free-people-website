#community-header-navigation
	display none

#community-header
	grid-area: application-header
	float left
	width 100%
	margin 0
	padding-bottom: 12px
	background $secondary-color
	border-bottom $secondary-border

	&__consultation
	&__language
		display none

	&__container
		position relative
		width 300px
		margin 0 auto
		padding 0

	&__brand
		float left
		width 38px
		height 50px
		margin 0 14px 0 0
		padding 0
		background $grey-color

	&__name
		float left
		width 206px
		margin 0
		padding 0

		h1
			float left
			width 100%
			margin-bottom: 8px
			padding 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 18px
			line-height 25px
			color $black-color
			// border none
			text-align left

		h2
			float left
			width 100%
			margin 0
			padding 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 15px
			line-height 15px
			font-style: italic
			color $paragraph-color
			// border none
			text-align left

	&__mobile
		float right
		margin 2px 0 0 0
		padding 0
		outline none
		cursor pointer

	&__bars
		float right
		margin 0
		padding 0
		font-size 25px
		line-height 19px
		color $black-color
		border none
		text-align right
		cursor pointer
