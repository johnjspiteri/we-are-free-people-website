#header-pitch
	padding 0 0 8px 0

	&__content
		width 1024px

		h1
			font-size 12px

		p
			font-size 11px
			line-height 15px

	&__title
		width 124px
		margin 0 12px 0 0
		padding 12px 10px 7px 14px

		h1
			line-height 17px

	&__arrow
		margin 2px 0 0 5px
		font-size 16px

	&__time
		width 218px
		margin 7px 10px 0 0

	&__paragraph
		width 174px
		margin 10px 0 0 0
		padding 0 11px 0 0

	&__review
		width 154px
		margin 10px 0 0 10px

.header-pitch-square
	width: 62px
	margin 0 6px 0 0

	h3
		height 15px
		font-size 8px

	&__value
		width: 29px
		height: 34px
		margin 0 4px 0 0

	&__value:last-child
		margin: 0

	&__half
		width: 29px
		height: 17px

	&__number
		width 29px
		height 33px

		h4
			font-size 15px

.header-pitch-square:last-child
	margin: 0

.header-pitch-button
	width 156px
	margin 8px 0 0 0
	padding 5px 12px 5px 12px

	h1
		line-height 18px

.header-pitch-button:last-child
	display block
	width 138px
	margin 8px 0 0 8px
	padding 5px 12px 5px 12px
	background #333
	border #000
	border-bottom 3px solid #000

	h1
		color $white-color
