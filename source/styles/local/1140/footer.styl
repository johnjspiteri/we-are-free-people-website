#lga-footer
	grid-area: legal-footer
	float left
	width 100%
	padding 0
	margin 0
	background $color-primary
	border-top $border-primary

	&__container
		position relative
		width 300px
		padding 20px 10px 0 10px
		margin 0 auto

	&__company
		float left
		width 100%
		padding 0
		margin-bottom: 30px

	&__logo
		float: left
		width 50px
		height 50px
		background #444
		padding: 0
		margin: 0 20px 10px 0

	&__brand
		float left
		width 220px
		padding 0
		margin-bottom: 20px

	h1
		float left
		width 100%
		margin-bottom: 11px
		font-size 18px
		line-height 21px
		text-align left
		border none
		color $color-black
		font-family $font-primary
		font-weight $font-weight-primary-400

	h2
		float left
		width 100%
		padding 0
		margin 0
		font-style italic
		font-size 15px
		line-height 15px
		border none
		font-family $font-primary
		font-weight $font-weight-primary-400
		color #686868

	&__address
		float left
		width 100%
		padding 0
		margin-bottom: 10px

	&__contact
		float left
		width 100%
		padding 0
		margin 0

	&__about
		float left
		width 100%
		padding 0
		margin 0

	&__cv
		float left
		width 100%
		padding 0
		margin-bottom: 42px

	&__navigation
		float left
		padding 0
		margin-bottom: 20px

.lga-footer-row
	float left
	width 280px
	padding 0
	margin-bottom: 10px

	p
		float: left
		width 100%
		padding 0
		margin 0
		font-size 14px
		line-height 30px
		font-family $font-primary
		font-weight: $font-weight-primary-400
		color $color-paragraph

.lga-footer-address-line
	float left
	width 200px
	padding 0
	margin 0
	font-size 14px
	line-height 25px
	font-family: $font-primary
	font-weight: $font-weight-primary-400

.lga-footer-contact-line
	float left
	width 200px
	padding 0
	margin 0
	font-size 14px
	line-height 25px
	font-family: $font-primary
	font-weight: $font-weight-primary-400

.lga-footer-social
	float left
	width 100%
	padding 0
	margin 0

.lga-footer-social-facebook
.lga-footer-social-twitter
.lga-footer-social-instagram
	float left
	padding 0
	margin 0 10px 0 0
	font-size 22px
	line-height 22px
	text-align: center;
	cursor: pointer;
	color: $color-paragraph

.lga-footer-column
	float: left
	padding: 0
	margin: 0 30px 0 0

	&__button
		display: inline
		margin: 0
		color $color-black

		h3
			margin: 0
			padding: 0
			text-align left
			font-family $font-primary
			font-weight: $font-weight-primary-400
			font-size: 14px
			line-height 24px
			color $color-paragraph
