#community-donate-form
	float: left
	width 100%
	margin 0 0 36px 0
	padding 28px 20px 22px 20px
	border $primary-on-base-border
	box-sizing border-box
	background: #f8f

	&__section
		float: left
		width: 100%
		margin: 0
		padding: 0

		h1
			display inline-block
			margin 0 0 12px 0
			padding 0 30px
			font-family $primary-font
			font-weight $font-weight-primary-400
			font-size 21px
			line-height 34px
			color $color-title
			text-align center

		p
			width 100%
			margin 0 0 15px 0
			padding 0
			font-family $secondary-font
			font-weight $secondary-font-weight-400
			font-size 14px
			line-height 25px
			color $primary-paragraph-color
			text-align center

			span
				margin 0
				padding 0 0 7px 0
				border-bottom 5px solid $blue-color
