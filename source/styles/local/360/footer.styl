#footer
	grid-area: application-footer
	float left
	width 100%
	padding 20px 0 20px 0
	margin 0
	background $primary-background-color
	border-top $border-primary

	&__container
		position relative
		width 340px
		padding 0
		margin 0 auto

		h3
			margin: 0
			padding: 0
			text-align left
			font-family $secondary-font
			font-weight: $secondary-font-weight-400
			font-size: 14px
			line-height 24px
			color $paragraph-color

	&__company
		float left
		width 100%
		padding 0
		margin 0 0 30px 0

	&__brand
		float left
		width 316px
		margin 0 0 20px 0
		padding 0

		h1
			float left
			margin 0
			padding 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 18px
			line-height 25px
			color $black-color
			text-align left
			cursor pointer

		h2
			float left
			width 100%
			margin 0
			padding 0
			font-family $alternate-font
			font-weight $alternate-font-weight-400
			font-size 24px
			line-height 24px
			color #787878
			text-align left
			cursor pointer

	&__outline
		float left
		width 24px
		height 24px
		padding 0
		margin 0 10px 1px 0
		background $accent-color
		border-radius 8px 0 8px 0
		cursor pointer

	&__white
		float left
		width 8px
		height 8px
		background $white-color
		margin 8px 0 0 8px

	&__address
		float left
		width 100%
		padding 0
		margin-bottom 4px

	&__contact
		float left
		width 100%
		padding 0
		margin 0

	&__about
		float left
		width 100%
		padding 0 10px 0 0
		margin 0
		box-sizing border-box

		h1
			float left
			margin 0 0 8px 0
			padding 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 18px
			line-height 25px
			color $black-color
			text-align left
			cursor pointer

		p
			float: left
			width 100%
			padding 0
			margin 0
			font-size 14px
			line-height 23px
			font-family $primary-font
			font-weight: $primary-font-weight-400
			color $paragraph-color

	&__cv
		float left
		width 100%
		padding 0
		margin-bottom: 42px

	&__navigation
		float left
		padding 0
		margin-bottom 40px

.footer-row
	float: left
	width 320px
	padding: 0
	margin 0 0 10px 0

.footer-address-line
	float left
	width 100%
	margin: 0
	padding: 0

.footer-contact-line
	float left
	width 100%
	padding 0
	margin 0 0 4px 0

.footer-social
	float left
	width 100%
	padding 0
	margin 18px 0 0 0

.footer-social-facebook
.footer-social-twitter
.footer-social-instagram
	float left
	padding 0
	margin 0 24px 0 0
	font-size 22px
	line-height 22px
	color $paragraph-color
	text-align center
	cursor pointer

.footer-social-twitter
	font-size 23px

.footer-column
	float: left
	padding: 0
	margin: 0 45px 0 0

	&__button
		display: inline
		margin: 0
		color $black-color
