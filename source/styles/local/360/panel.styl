.mat-sidenav
	position fixed
	width 275px
	height 100%
	min-height 100%
	bottom 0
	padding 0
	margin 0
	background none
	outline none
	left 0
	top 0
	z-index 99999
	-webkit-transform translate3d(0%, 0, 0)
	transform translate3d(0%, 0, 0)
	overflow scroll

.panel
	float left
	min-height 100%
	padding 0
	margin 0
	background $base-background-color
	border-right $black-border

	&__buttons
		float left
		width 140px
		padding 15px 15px 0 15px
		margin 0

		h1
			float left
			font-family: $primary-font
			font-weight $primary-font-weight-400
			font-size 14px
			line-height 24px
			text-shadow none
			width 118px
			padding 9px 10px 6px 10px
			margin 0 0 11px 0
			color $base-button-active-text-color
			background $base-button-active-background-color
			border $base-button-active-border
			border-radius $radius
			text-align center
			text-decoration none
			cursor pointer
			outline none

	&__spacer
		float left
		width 100%
		height 18px
		padding 0
		margin 0

	&__tile.active
		background $blue
		border $blue-border

	&__close
		float left
		width 26px
		height 40px
		padding-right: 4px
		margin 18px 0 0 -1px
		background $accent-color-light
		border $black-border-color
		border-left none
		border-radius: $radius-right
		cursor pointer
		outline none

	&__caret
		float left
		width 100%
		padding 0
		margin 0
		font-size 26px
		line-height 42px
		color $black-color
		text-align center
		cursor pointer

	&__language
		position absolute
		padding 0
		max-height 40px
		bottom 30px
		right 120px
		margin 0

	&__flag
		border-radius: $radius
		background $accent-color
		float left
		margin 0
		padding 4px 18px 4px 4px

		img
			border-radius: $radius
			width 40px
			height 30px

	&__lang-caret
		font-size 18px
		line-height 25px
		margin 4px 0 0 10px
		padding 0
		color $black-color

	&__languages
		position relative
		bottom 200px
		left 40px
		margin 0
		padding 0
		backgorund $accent-color
		border-radius: $radius
		img
			float left
			width 40px
			border-radius: $radius
			margin 0 0px 4px 0

	&__holder
		float left
		background $accent-color
		max-width 40px
		padding 8px
		margin 0
		border-radius: $radius

.panel::-webkit-scrollbar
	width: 0 !important
