#community-header-banner
	float: left
	width: 100%
	margin-bottom: 10px
	background: $accent-color
	border $accent-border

	&__container
		position relative
		width 320px
		margin 0 auto
		padding 0

		h1
			float left
			width 100%
			margin 0
			padding 0
			font-family $font-primary
			font-weight $primary-font-weight-400
			font-size 17px
			line-height 35px
			color $accent-text-color
			border none
			text-align center
