#header-pitch
	//display none
	float left
	width 100%
	margin 0
	padding 0 0 12px 0
	background $tertiary-background-color
	border none
	border-bottom $tertiary-on-primary-border-bottom

	&__container
		position relative
		width 340px
		margin 0 auto
		padding 0
		z-index $z-index-structure

		h2
		h1
			float left
			width 100%
			margin 0
			padding 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 15px
			color $tertiary-button-text-inactive-color
			text-align center

		h2
			font-size 14px

		p
			float left
			width: 100%
			margin 0
			padding 0
			font-family $secondary-font
			font-weight $secondary-font-weight-400
			font-size 13px
			line-height 20px
			color $tertiary-paragraph-color
			text-align center

	&__title
		float left
		width 270px
		margin 0 0 14px 35px
		padding 7px 0 9px 0
		background $tertiary-button-inactive-background-color
		border $tertiary-button-inactive-border
		border-bottom $tertiary-button-inactive-border-bottom
		border-top none
		border-radius $radius-bottom
		box-sizing border-box

		h1
			line-height 20px

		h1.medium
		h1.small
			display: none

		h1.large
			display block

	&__arrow
		margin 2px 0 0 6px
		padding 0
		font-size 17px
		--fa-primary-color $tertiary-button-text-inactive-color
		--fa-secondary-color $tertiary-button-text-inactive-color
		--fa-primary-opacity 1
		--fa-secondary-opacity 1

	&__time
		float left
		width 272px
		margin 0 0 0 33px
		padding 0

	&__paragraph
		float left
		width 100%
		margin 12px 0 12px 0
		padding 0 10px
		box-sizing border-box

		p.small
			display none

		p.large
			display block

	&__holder
		float: left
		width: 100%
		margin: 0
		padding: 0

	&__buttons
		float: left
		margin: 0
		padding: 0

	&__review
		display none

	&__close
		position: absolute
		width: 50px
		height: 50px
		margin: 0
		padding: 0
		right: 0
		z-index: 99999

	&__triangle
		float: left
		width: 0;
		height: 0;
		border-top: 50px solid $black-color
		border-left: 50px solid transparent;
		right: 0

	&__times
		display flex
		position: absolute
		width: 25px
		height: 25px
		right: 0
		margin: 0
		padding: 0
		font-size 22px
		color $white-color
		align-items center
		justify-content center
		text-align center
		z-index: 99999
		cursor pointer

.header-pitch-square
	float left
	width 84px
	margin 0 10px 0 0
	padding 0
	box-sizing border-box

	h3
		float left
		width 100%
		height 21px
		margin 0
		padding 0
		font-family $secondary-font
		font-weight $secondary-font-weight-600
		font-size 9px
		color $tertiary-label-color
		text-align center

	&__value
		float: left
		width: 39px
		height: 42px
		margin 0 6px 0 0
		padding 0

	&__value:last-child
		margin: 0

	&__half
		float left
		width 38px
		height 21px
		margin 0
		background #e2e2e2
		border-radius $radius-bottom
		border 1px solid #a8a8a8
		border-bottom 3px solid #626262
		border-top none
		box-sizing border-box

	&__half:first-child
		background #fff
		border-radius $radius-top
		border 1px solid #a8a8a8
		border-bottom 1px solid #a8a8a8

	&__number
		position absolute
		width 38px
		height 40px
		margin 0
		padding 0

		h4
			display flex
			width 100%
			height 100%
			margin 0
			padding 0
			font-family $secondary-font
			font-size 19px
			font-weight $secondary-font-weight-400
			color $tertiary-paragraph-color
			align-items center
			justify-content center
			text-align center

.header-pitch-square:last-child
	margin: 0

.header-pitch-button
	float left
	width 300px
	margin 0 0 0 20px
	padding 7px 0 9px 0
	background $tertiary-button-inactive-background-color
	border $tertiary-button-inactive-border
	border-bottom $tertiary-button-inactive-border-bottom
	border-radius $radius
	box-shadow none
	cursor pointer
	outline none
	box-sizing border-box

	h2.small
		display: none

.header-pitch-button:last-child
	display none
