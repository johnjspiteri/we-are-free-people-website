#header-pitch
	display none
	float left
	width 100%
	margin 0
	padding 0 0 11px 0
	//background #f3f0e7
	background #e8e8e8
	border none
	border-bottom 3px solid #888

	&__content
		position relative
		width 340px
		margin 0 auto
		padding 0
		z-index $z-index-structure

		p
			float left
			width: 100%
			margin 0
			padding 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 13px
			line-height 19px
			color $black-color
			text-align center

		p.small
			display block

		p.large
			display none

	&__title
		float left
		width 108px
		margin 0 10px 0 0
		padding 12px 0 5px 14px
		background #424242
		border $accent-border
		border-bottom 3px solid #322f2b
		border-top none
		border-radius $radius-bottom
		box-sizing border-box

		h1
			float left
			width 100%
			margin 0
			padding 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 12px
			line-height 19px
			color $white-color
			text-align left

	&__arrow
		position: absolute
		margin 0 0 0 6px
		padding 0
		font-size 19px
		--fa-primary-color $white-color
		--fa-secondary-color $white-color
		--fa-primary-opacity 1
		--fa-secondary-opacity 1

	&__time
		float left
		width 222px
		margin 0
		padding 0

	&__paragraph
		float left
		width 100%
		margin 12px 0 12px 0
		padding 0
		box-sizing border-box

	&__buttons
		float: left
		margin: 0
		padding: 0

	&__review
		display none

.header-pitch-square
	float: left
	width: 70px
	margin 5px 6px 0 0
	padding 0
	box-sizing border-box

	h3
		float left
		width 100%
		height 17px
		margin 0
		padding 0
		font-family $primary-font
		font-weight $primary-font-weight-400
		font-size 10px
		color $tertiary-label-color
		text-align center

	&__value
		float: left
		width: 33px
		height: 36px
		margin 0 4px 0 0
		padding 0

	&__value:last-child
		margin: 0

	&__half
		float left
		width 33px
		height 18px
		margin 0
		background #d2d2d2
		border-radius $radius-bottom
		border 1px solid #a8a8a8
		border-bottom 3px solid #525252
		border-top none
		box-sizing border-box

	&__half:first-child
		border-radius $radius-top
		background #f2f2f2
		border 1px solid #a8a8a8
		border-bottom 1px solid #a8a8a8

	&__number
		position absolute
		width 33px
		height 33px
		margin 0
		padding 0

		h4
			display flex
			width 100%
			height 100%
			margin 0
			padding 0
			font-family $primary-font
			font-size 19px
			font-weight $primary-font-weight-400
			color #383838
			align-items center
			justify-content center
			text-align center

.header-pitch-square:last-child
	margin: 5px 0 0 0

.header-pitch-button
	float left
	width 280px
	margin 0 0 0 30px
	padding 10px 0 11px 0
	background #424242
	//border $tertiary-button-active-border
	//border-bottom $tertiary-button-active-bottom-border
	border-radius $radius
	box-shadow none
	cursor pointer
	outline none
	box-sizing border-box

	h2
		display flex
		float left
		width 100%
		height 100%
		margin 0
		padding 0
		font-family $primary-font
		font-weight $primary-font-weight-400
		font-size 13px
		line-height 13px
		color $white-color
		align-items center
		justify-content center
		text-align center

.header-pitch-button:last-child
	display none
