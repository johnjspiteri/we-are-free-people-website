#header-pitch
	//display none
	float left
	width 100%
	margin 0
	padding 0 0 11px 0
	background $tertiary-background-color
	border none
	border-bottom $tertiary-on-primary-border-bottom

	&__content
		position relative
		width 340px
		margin 0 auto
		padding 0
		z-index $z-index-structure

		p
			float left
			width: 100%
			margin 0
			padding 0
			font-family $secondary-font
			font-weight $secondary-font-weight-400
			font-size 13px
			line-height 20px
			color $tertiary-paragraph-color
			text-align center

		p.small
			display block

		p.large
			display none

	&__title
		float left
		width 110px
		margin 0 10px 0 0
		padding 8px 0 6px 8px
		background $tertiary-button-inactive-background-color
		border $tertiary-button-inactive-border
		border-bottom $tertiary-button-inactive-border-bottom
		border-top none
		border-radius $radius-bottom
		box-sizing border-box

		h1
			float left
			width 100%
			margin 0
			padding 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 13px
			line-height 17px
			color $tertiary-button-text-inactive-color
			text-align left

	&__arrow
		position: absolute
		margin 2px 0 0 8px
		padding 0
		font-size 18px
		--fa-primary-color $tertiary-button-text-inactive-color
		--fa-secondary-color $tertiary-button-text-inactive-color
		--fa-primary-opacity 1
		--fa-secondary-opacity 1

	&__time
		float left
		width 216px
		margin 6px 0 0 0
		padding 0

	&__paragraph
		float left
		width 100%
		margin 12px 0 12px 0
		padding 0 5px
		box-sizing border-box

	&__buttons
		float: left
		margin: 0
		padding: 0

	&__review
		display none

.header-pitch-square
	float: left
	width: 68px
	margin 5px 6px 0 0
	padding 0
	box-sizing border-box

	h3
		float left
		width 100%
		height 18px
		margin 0
		padding 0
		font-family $secondary-font
		font-weight $secondary-font-weight-400
		font-size 9px
		color $tertiary-label-color
		text-align center

	&__value
		float: left
		width: 32px
		height: 36px
		margin 0 4px 0 0
		padding 0

	&__value:last-child
		margin: 0

	&__half
		float left
		width 32px
		height 18px
		margin 0
		background #d2d2d2
		border-radius $radius-bottom
		border 1px solid #a8a8a8
		border-bottom 3px solid #525252
		border-top none
		box-sizing border-box

	&__half:first-child
		background #fff
		border-radius $radius-top
		border 1px solid #a8a8a8
		border-bottom 1px solid #a8a8a8

	&__number
		position absolute
		width 32px
		height 34px
		margin 0
		padding 0

		h4
			display flex
			width 100%
			height 100%
			margin 0
			padding 0
			font-family $secondary-font
			font-size 18px
			font-weight $secondary-font-weight-400
			color $tertiary-paragraph-color
			align-items center
			justify-content center
			text-align center

.header-pitch-square:last-child
	margin: 5px 0 0 0

.header-pitch-button
	float left
	width 260px
	margin 0 0 0 40px
	padding 9px 0 11px 0
	background $tertiary-button-inactive-background-color
	border $tertiary-button-inactive-border
	border-bottom $tertiary-button-inactive-bottom-border
	border-radius $radius
	box-shadow none
	cursor pointer
	outline none
	box-sizing border-box

	h2
		display flex
		float left
		width 100%
		height 100%
		margin 0
		padding 0
		font-family $primary-font
		font-weight $primary-font-weight-400
		font-size 15px
		line-height 15px
		color $tertiary-button-text-inactive-color
		align-items center
		justify-content center
		text-align center

.header-pitch-button:last-child
	display none
