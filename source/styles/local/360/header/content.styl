#header
	grid-area application-header
	float left
	width 100%
	margin 0
	padding 13px 0 13px 0
	background $secondary-background-color
	border-bottom $secondary-border

	&__navigation
	&__consultation
	&__language
		display none

	&__container
		position relative
		width 340px
		margin 0 auto
		padding 0

	&__brand
		float left
		width 226px
		margin 0
		padding 0

		h1
			float left
			margin 0
			padding 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 18px
			line-height 23px
			color $black-color
			text-align left

		h2
			float left
			width 100%
			margin 0
			padding 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 14px
			line-height 14px
			font-style: italic
			color $paragraph-color
			// border none
			text-align left

	&__outline
		float left
		width 24px
		height 24px
		padding 0
		margin 0 12px 8px 0
		background $accent-color
		border-radius 10px 0 10px 0

	&__white
		float left
		width 8px
		height 8px
		background $white-color
		margin 8px 0 0 8px

	&__mobile
		float right
		margin 0
		padding 0
		outline none
		cursor pointer

	&__bars
		float right
		margin 0
		padding 0
		font-size 24px
		line-height 19px
		color $black-color
		border none
		text-align right
		cursor pointer
