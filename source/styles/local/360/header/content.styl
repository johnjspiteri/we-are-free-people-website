#community-header-navigation
	display none

#community-header
	grid-area application-header
	float left
	width 100%
	margin 0
	padding-bottom 13px
	background $secondary-color
	border-bottom $secondary-border

	&__consultation
	&__language
		display none

	&__container
		position relative
		width 360px
		margin 0 auto
		padding 0

	&__brand
		float left
		width 58px
		height 50px
		margin 0 14px 0 0
		padding 0
		background $temporary-background
		border-radius: 0 5px 5px 0

	&__name
		float: left
		width 226px
		margin 0
		padding 0

	h1
		float left
		width 100%
		margin-bottom: 8px
		padding 0
		font-family $primary-font
		font-weight $primary-font-weight-400
		font-size 18px
		line-height 25px
		color $black-color
		// border none
		text-align left

	h2
		float left
		width 100%
		margin 0
		padding 0
		font-family $primary-font
		font-weight $primary-font-weight-400
		font-size 14px
		line-height 14px
		font-style: italic
		color $paragraph-color
		// border none
		text-align left

	&__mobile
		float right
		margin 0
		padding 0
		outline none
		cursor pointer

	&__bars
		float right
		margin 0
		padding 0
		font-size 25px
		line-height 19px
		color $black-color
		border none
		text-align right
		cursor pointer
