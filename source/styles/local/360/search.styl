#search
	display: grid
	width 340px
	margin 0 10px 20px 10px
	padding 20px 10px 20px 10px
	grid-template-columns: 1fr 1fr
	grid-template-rows: auto
	grid-column-gap: 10px
	grid-row-gap: 10px
	background: $primary-background-color
	border $primary-on-base-border
	border-radius: $radius
	box-sizing border-box
	text-align: center

	label
		float: left
		width: 100%
		margin 0 0 6px 0
		padding 0 5px 0 5px
		font-family $primary-font
		font-weight $primary-font-weight-500
		font-size 12px
		line-height 12px
		color #000
		justify-self center

	&__tags
		float right
		padding: 0
		margin -1px 20px 0 0

	&__caret-down
	&__caret-up
	&__times
		float right
		height 100%
		margin-left: 10px
		padding 0
		font-size 14px
		color #717171
		align-items center

	&__times
		font-size 12px

.search-field
	float: left
	width: 100%
	height: $height-search-field-360
	margin: 0
	padding 0

	ia-select
	ia-select-tag
		height 46px
		background #e8e8e8
		border $primary-field-border

		h4
			height 46px
			font-size $search-font-size-360
			color: $primary-field-text-color

	ia-select.disabled
		background #e8e8e8
		border $primary-field-border-disabled

	ia-select.open
	ia-select-tag.open
		border-bottom $primary-field-border-dotted
		border-radius: $radius

	ia-select:focus
	ia-select-tag:focus
		background: #fff
		border $primary-field-border-focus

	ia-select .ia-select__option
		height 47px
		background #e8e8e8
		border-bottom: $primary-field-border-dotted

	ia-select .ia-select__caret
	ia-select-tag .ia-select__caret
		height $height-search-field-360
		color: $primary-field-text-color

.search-section
	float: left
	width: 100%
	margin: 0
	padding: 0
	color #585858

	h4
		display flex
		float: left
		height: 100%
		margin: 0
		padding 0
		font-family $font-secondary
		font-weight $font-weight-secondary-500
		align-items center
		color $grey-color
		text-align left
		box-sizing border-box

	select
		float: left
		width: 100%
		padding: 0 10px
		font-family: $primary-font
		font-weight $primary-font-weight-500
		border-radius $radius
		border: $black-border
		font-size 16px
		color $primary-title-color
		background: $white-color
		outline none
		cursor pointer
		-webkit-appearance none
		-moz-appearance none
		appearance none
		text-align: center
		text-transform uppercase

	input
		float: left
		width: 100%
		padding: 0 15px
		font-family: $primary-font
		font-weight $primary-font-weight-500
		border-radius $radius
		border: $black-border
		font-size 14px
		color $primary-title-color
		box-sizing: border-box
		background: $color-width
		text-align center
		vertical-align middle
		text-transform: uppercase
		-webkit-appearance none
		-moz-appearance none
		appearance none
		outline none
		cursor pointer

	input:nth-child(1)
		display none
		border none

	input[type='text']::-webkit-input-placeholder,
	input[type='text']:-moz-placeholder,
	input[type='text']::-moz-placeholder,
	input[type='text']:-ms-input-placeholder
		color: $primary-title-color;

.search-section:nth-child(7)
	//.search-section:nth-child(10)
	grid-column 1 / 3

.search-tag
	float right
	height 30px
	margin 0 0 0 10px
	padding 0 15px
	font-weight $primary-font-weight-500
	font-family $primary-font
	border-radius $radius-bottom
	border $primary-on-base-border
	background $primary-background-color
	cursor pointer
	border-top none
	align-items center

	h5
		display flex
		width: 100%
		margin: 0
		font-size 11px
		line-height: 30px
		color $primary-label-color
		text-align center
		justify-self center
		align-items center
