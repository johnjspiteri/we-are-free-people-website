#home
	float: left
	width: 100%
	margin: 0
	padding: 0

	&__slider
		grid-area slider
		width 100%
		height 240px
		margin 0 0 40px 0
		padding 0
		border-bottom $secondary-image-border
		border-top $secondary-image-border
		background $temporary-background
		box-sizing border-box
		overflow hidden

		h1
			float left
			width 100%
			padding 0
			margin 0
			font-size 20px
			line-height 220px
			font-family $primary-font
			font-weight $primary-font-weight-400
			color $black-color
			text-align center

	&__squares
		display grid
		float left
		grid-template-columns 1fr
		grid-template-rows auto
		width 360px
		margin 0 0 $margin-bottom-page-360 0
		background $secondary-background-color
		border-top $secondary-border
		border-bottom $secondary-border

	&__statements
		display grid
		width: 340px
		grid-template-columns 1fr
		grid-template-rows auto
		margin 0 10px 50px 10px
		padding: 0
		grid-row-gap 10px

.home-square
	float: left
	width 100%
	padding 24px 0 32px 0
	margin 0
	border-bottom $secondary-dotted-border
	box-sizing: border-box

	&__row
		float left
		width 360px
		padding 0 20px 0 15px
		margin 0
		box-sizing border-box

		img
			float left
			width 285px
			height 160px
			margin 0 0 24px 0
			padding 0
			background $secondary-image-background-color
			border $secondary-image-border
			border-radius $radius

		h3
			float left
			padding-bottom: 8px
			margin 0 0 12px 0
			font-size 18px
			line-height 18px
			font-family $primary-font
			font-weight $primary-font-weight-400
			border-bottom $secondary-title-border-bottom
			color $secondary-title-color
			text-align left

		p
			float left
			width 100%
			padding 0
			margin 0
			font-size 14px
			line-height 25px
			font-family $secondary-font
			font-weight $secondary-font-weight-400
			color $secondary-paragraph-color
			text-align left

	&__buttonholder
		float left
		padding 10px
		width 340px

	&__button
		float left
		margin: 18px 0 0 0
		padding 8px 16px 9px 16px
		background $accent-color
		border-radius $radius
		border-bottom 1px $red-border-bottom

		h4
			float left
			width 100%
			margin 0
			padding 0
			font-family $primary-font
			font-size 16px
			font-weight $primary-font-weight-400
			line-height 20px
			color $secondary-button-text-color
			text-align center

.home-square:last-child
	border-bottom none

.home-statement
	float: left
	width 100%
	padding 22px 22px 22px 22px
	margin 0 0 8px 0
	border $secondary-border
	background $secondary-background-color
	border-radius: $radius
	box-sizing border-box

	&__image
		float left
		width 62px
		height 62px
		margin 0 12px 0 0
		background $secondary-image-background-color
		border $secondary-border
		border-radius $radius-circle
		overflow hidden

		img
			float left
			width 100%
			height 100%
			padding 0
			margin 0

	p
		width 100%
		padding 0
		margin 0 0 14px 0
		font-size 14px
		line-height 23px
		font-family $secondary-font
		font-weight $secondary-font-weight-400
		color $secondary-paragraph-color
		text-align left

	h6
		float right
		padding 0
		margin 0 20px 0 0
		font-size 15px
		line-height 15px
		font-family $primary-font
		font-weight $primary-font-weight-400
		color $secondary-title-color
