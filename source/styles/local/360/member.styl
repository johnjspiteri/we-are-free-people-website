.team-list
	float left
	width 300px
	padding 0
	margin 0 0 30px 10px

	&__square
		display inline-block
		vertical-align top
		width 280px
		padding 16px 5px 18px 15px
		margin 0 0 14px 0
		background $secondary-background-color
		border-bottom $secondary-color-border-bottom
		border-radius $radius

	&__left
		float left
		width 96px
		padding 0
		margin 0 15px 4px 0

		h2
			float left
			height 28px
			padding 0 11px 0 11px
			margin 0 5px 0 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 18px
			line-height 29px
			color $color-white
			background $primary-color
			border-bottom $primary-color-border-bottom
			border-radius $radius
			text-align center

	&__image
		float left
		width 96px
		height 96px
		padding 0
		margin 0 0 10px 0
		background $color-white
		border-bottom $primary-color-border-bottom
		border-radius $radius
		overflow hidden

	&__content
		float left
		width 100%
		padding 0
		margin 0 0 16px 0

		h1
			float left
			width 100%
			padding 0
			margin 0 4px 8px 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 24px
			line-height 27px
			color $black-color
			text-align left
			text-shadow $black-color-shadow

	&__name
		width 100%
		padding 0
		margin 0 0 14px 0

		h2
			width 100%
			padding 0
			margin 0
			font-family $secondary-font
			font-style italic
			font-weight $font-weight-secondary-500
			font-size 18px
			line-height 25px
			color $paragraph-color
			text-align left

	&__description
		width 270px
		padding 0
		margin 0 0 18px 0

		p
			width 100%
			padding 0
			margin 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 18px
			line-height 25px
			color $paragraph-color
			text-align left

	&__contacts
		float left
		width 100%
		padding 0
		margin 0

	&__contact
		float left
		width 34px
		height 34px
		padding 0
		margin 0 8px 0 0
		background $primary-color
		border-bottom $primary-color-border-bottom
		border-radius $radius

		&__linkedin-in
		&__mobile-alt
		&__at
			float left
			width 100%
			padding 0
			margin 0
			color $color-white
			text-align center

		&__linkedin-in
			font-size 18px
			line-height 34px

		&__mobile-alt
			font-size 19px
			line-height: 35px

		&__at
			font-size 16px
			line-height: 36px
