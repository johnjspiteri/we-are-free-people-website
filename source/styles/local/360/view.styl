.lga-view
	width 320px
	padding 16px 20px 28px 20px
	margin 0 0 50px 0

	&__aside
		display none

	&__top
		margin 0

	&__title
		margin 0 0 18px 0

		h1
			max-width 238px
			padding 10px 20px 10px 20px
			font-size 17px
			line-height 28px

	&__purchase
		height 45px
		margin 0 10px 32px 0

		h3
			padding 0 26px 0 26px
			font-size 16px
			line-height 47px

	&__arrow
		width 45px
		height 45px
		margin 0 0 32px 0

		&__arrow-left
			font-size 20px
			line-height 47px

	&__square
		margin 0 0 30px 0

		h2
			padding 8px 20px 8px 20px
			margin 0
			font-size 16px
			line-height 26px

	&__square.author
		margin 0 14px 30px 0

	&__square.category
		margin 0 0 30px 0

	&__caption
		width 100%

	&__center
		margin 0 0 9px 0
		z-index 99

		h5
			font-size 15px
			line-height 15px

	&__description
		margin 0 0 38px 0

		p
			font-size 16px
			line-height 30px

		p.large
			display none

	&__button
		width 280px
		height 56px
		margin 0 0 30px 0

		h4
			font-size 17px
			line-height 57px

	&__testimonial
		margin 0 0 10px 0

		h3
			margin 0 30px 0 22px
			font-size 17px
			line-height 50px

	&__bubble
		width 240px
		padding 16px 20px 18px 20px
		border-radius 20px

		p
			font-size 16px
			line-height 29px

	&__caret
		margin 0 80px 6px 190px

	&__picture
		height 50px
		width 50px

		img
			border-radius 1000px
