#lga-chat
	width 200px
	right 20px

	&__container
		height 250px
		border-radius: 5px 5px 0 0

	&__top
		width 180px
		padding 5px 10px
		border-radius: 4px 4px 0 0

	&__image
		width 30px
		height 30px

	&__title
		width 100px
		padding 0 10px

		h1
			font-size: 13px
			line-height 13px

	&__content
		width 180px
		height 200px
		padding 5px 10px

	&__field
		width 170px

		input
			width 120px
			height 30px

		button
			width 20px
			height 33px

.lga-chat__row
	margin 0 0 10px 0

.lga-chat-message
	width 70px
	padding 5px
	margin 0 10px 0 0
	border-radius: 6px

	h3
		font-size: 13px
		line-height: 15px

.lga-chat-caret-row
	margin-left: 10px

.lga-chat-caret
	padding 0

.lga-chat-message.right
	width 70px
	padding 5px
	border-radius: 6px

	h3
		font-size: 13px
		line-height: 15px

.lga-chat__row.right
	width 90px
	padding-bottom: 10px

.lga-chat-caret-right
	padding 0
	margin 0 8px 0 0
