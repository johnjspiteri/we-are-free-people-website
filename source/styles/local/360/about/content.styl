#community-about
	float: left
	width 360px
	padding 24px 0 24px 0
	margin 0 0 30px 0
	border-top $secondary-border
	border-bottom $secondary-border
	background $secondary-background-color

	h1
		float: left
		width 340px
		padding: 0
		margin 0 0 16px 20px
		font-family $primary-font
		font-weight $primary-font-weight-400
		font-size 20px
		line-height 36px
		color $black-color
		text-align left

	span
		float: left
		width 320px
		padding: 0
		margin 4px 0 22px 20px
		font-size 15px
		line-height 25px
		font-family $primary-font
		font-weight $primary-font-weight-400
		color $black-color
		text-align left

	p
		float: left
		width 320px
		margin 0 0 18px 20px
		font-size 16px
		line-height 30px
		font-family $primary-font
		font-weight $primary-font-weight-400
		color $paragraph-color

		a
			color $red

	p.desktop
		display: none

	&__profile
		display none

	&__signature
		float: left
		width: 100%
		margin 0 0 20px 0
		padding: 0

		img
			float: left
			width 320px
			height 120px
			background: #e1e1e1

	&__media
		float: left
		width 360px
		height 180px
		margin 0 0 28px 0
		border-top $secondary-border
		border-bottom $secondary-border
		background #e8e8e8

		img
		video
			position relative
			width 100%
			height 100%

	&__image
		float: left
		width 320px
		height 260px
		margin 0 2px 10px 30px

		img
		video
			float left
			width 100%
			height 100%
