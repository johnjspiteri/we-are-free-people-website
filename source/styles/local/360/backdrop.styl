.mat-drawer-backdrop
.backdrop
	position fixed
	width 100%
	height 100%
	top 0
	margin 0
	padding 0
	background: $black-color
	filter unquote('alpha(opacity=80)')
	opacity 0.8
	z-index 90
	overflow hidden
	cursor pointer

#backdrop-demo
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	margin 0
	padding 0
	background $grey-color
	filter unquote('alpha(opacity=60)')
	opacity 0.6
	z-index 90
