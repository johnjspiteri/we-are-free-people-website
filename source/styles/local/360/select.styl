ia-select
ia-select-palette
ia-select-tag
	float: left
	width: 100%
	//height: 100%
	margin: 0
	padding: 0
	background $field-color-background
	border $border-primary
	border-radius $border-radius
	box-sizing border-box

	h4
		display flex
		float: left
		height: 100%
		margin: 0
		padding 0
		font-family $font-secondary
		//font-size $font-size-search-360
		font-weight $font-weight-secondary-300
		align-items center
		color $black-color
		text-align left
//box-sizing border-box

ia-select.disabled
	background $field-color-disabled
	border $border-field-disabled

ia-select.open
ia-select-palette.open
ia-select-tag.open
	border-radius: $border-radius-top
	border-bottom: $field-color-border-bottom-dotted

ia-select:focus
ia-select-palette:focus
ia-select-tag:focus
	background: #fdf6af
	border $border-input-focus
	border-radius $border-radius

.ia-select
	position relative
	width: 100%
	height: 100%
	margin: 0
	padding: 0
	border none
	box-sizing border-box
	pointer-events none
	z-index: 777777

	&__value
		float: left
		width: 100%
		height 100%
		margin: 0
		//padding: 7px 10px
		padding: 0 10px
		box-sizing border-box
		pointer-events auto

	&__caret
		float: right
		display flex
		height: 100%
		margin: 0
		padding: 0
		font-size: 13px
		align-items center
		color $field-color-caret
		cursor pointer

	&__options-holder
		float: left
		width: 100%
		height: 100%
		margin: 1px 0 0 0
		padding: 0
		pointer-events none
		border none

	&__options
		position absolute
		width: 100%
		margin: 0
		padding: 0
		box-sizing border-box
		pointer-events none
		border none
		z-index: 999999

	&__option
		float: left
		width: 100%
		margin: 0
		padding: 0 10px
		background $color-option-background
		//border $border-primary
		border none
		border-bottom: $field-color-border-bottom-dotted
		box-sizing border-box
		cursor pointer
		pointer-events auto

	&__option:last-child
		border-radius: $border-radius-bottom
		border-bottom none

	&__flag
		float: left
		display flex
		width: 30px
		height: 100%
		margin: 0 5px 0 0
		align-items center

		img
			float: left
			width: 100%
			margin: 0
			padding: 0

	&__colors
		float right
		width 44px
		//$height-editor-field-360 = 40px
		// - 2px for field border
		height 28px
		// use with caret?
		//margin 0 8px 0 0
		margin 5px 0
		padding 0
		border $border-black
		border-radius $border-radius
		box-sizing border-box
		overflow hidden

	&__color
		float: left
		width: 22px
		height: 100%
		border none
		border-right $border-black
		border-radius 0
		box-sizing border-box

	&__color:last-child
		border-right none

	&__tags
		float: left
		height: 100%
		margin: 0
		padding: 0
		background: #d0d0d0

.community-field
	float: left
	width: 100%
	height: $height-field-320
	margin: 0
	padding 0

	ia-select
		height: $height-field-320

	ia-select.ia-select__value h4
		height $height-field-320
		font-size $font-size-search-360

	ia-select .ia-select__option
		height $height-field-320

	ia-select .ia-select__caret
		height $height-field-320

.ia-select-option__tags
	float: left
	width: 100%
	margin: 0
	padding: 10px 2px 2px 10px
	background #f1f1f1
	border-top none
	border-radius: $border-radius-bottom
	box-sizing border-box

.ia-select-tag
	float: left
	//height: 100%
	height: 18px
	margin: 0 8px 8px 0
	padding: 0
	box-sizing border-box
	background: #ff22ff

	&__body
		float: left
		margin: 0
		padding: 0 9px
		height 100%
		background: $primary-color
		border-radius $border-radius-right
		border $border-primary
		border-left none
		align-items center
		box-sizing border-box

		h5
			display flex
			float: left
			height: 100%
			margin: 0
			padding 0
			font-family $font-secondary
			font-weight $font-weight-secondary-300
			font-size 11px
			color $color-white
			align-items center
			text-align left
			text-transform uppercase

	&__times
		display flex
		float: left
		height 100%
		margin 0 0 0 8px
		padding 0
		font-size 11px
		color $color-white
		align-items center
		text-align: center
		box-sizing border-box

	&__cap
		float left
		width 6px
		margin: 0
		padding: 0

	&__top
		float left
		width: 0
		height: 0
		border-bottom: 6px solid $primary-color;
		border-left: 6px solid transparent;

	&__middle
		float left
		width: 6px
		height: 6px;
		background: $primary-color

	&__bottom
		float left
		width: 0
		height: 0
		border-top: 6px solid $primary-color;
		border-left: 6px solid transparent;
		margin: 0

