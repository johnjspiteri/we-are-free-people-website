.ia-select
	&__value
		padding: 0 10px

	&__caret
		font-size: 13px

	&__options-holder
		margin: 1px 0 0 0

	&__option
		padding: 0 10px

	&__flag
		width: 30px
		margin: 0 5px 0 0

	&__colors
		width 50px

	&__color
		width: 25px

.ia-select-option__tags
	padding: 10px 2px 2px 10px

.ia-select-tag
	height: 18px
	margin: 0 8px 8px 0

	&__body
		padding: 0 9px

		h5
			font-size 11px

	&__times
		margin 0 0 0 8px
		font-size 11px

	&__cap
		width 6px

	&__top
		border-bottom: 6px solid $color-primary;
		border-left: 6px solid transparent;

	&__middle
		width: 6px
		height: 6px;

	&__bottom
		border-top: 6px solid $color-primary;
		border-left: 6px solid transparent;

