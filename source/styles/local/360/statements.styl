#community-statements
	display grid
	width: 340px
	grid-template-columns 1fr
	grid-template-rows auto
	margin 0 10px 50px 10px
	padding: 0
	grid-row-gap 10px

.community-statement
	float: left
	width 100%
	padding 24px 20px 22px 20px
	margin 0
	border $secondary-border
	background $secondary-background-color
	border-radius: $radius
	box-sizing border-box

	&__image
		float left
		width 65px
		height 65px
		margin 0 10px 0 0
		background $secondary-image-background-color
		border $secondary-border
		border-radius $radius-circle
		overflow hidden

		img
			float left
			width 100%
			height 100%
			padding 0
			margin 0

	p
		width 100%
		padding 0
		margin 0 0 14px 0
		font-size 13px
		line-height 25px
		font-family $primary-font
		font-weight $primary-font-weight-400
		color $secondary-paragraph-color
		text-align left

	h6
		float right
		padding 0
		margin 0 30px 0 0
		font-size 14px
		line-height 14px
		font-family $primary-font
		font-weight $primary-font-weight-400
		color $secondary-title-color
