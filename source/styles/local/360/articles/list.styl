#community-listings
	width 340px
	margin 0 0 32px 10px

.community-listing
	width 338px
	padding-top: 10px
	margin-bottom: 22px
	font-size 16px

	&__image
		width 318px
		margin 0 0 10px 10px

		img
			height 176px

	&__content
		width 300px
		padding 16px 20px 18px 20px

	&__title
		margin-bottom: 30px

		h1
			width 260px
			padding 10px 20px 10px 20px
			font-size 16px
			line-height 27px

	&__caption
		text-align center

	&__center
		margin-bottom: 7px
		z-index 99

		h5
			font-size 14px
			line-height 14px

	&__square
		margin-bottom: 36px

		h2
			padding 8px 20px 8px 20px
			font-size 15px
			line-height 25px

		p
			font-size 15px
			line-height 27px

	&__square.price
		margin 0 20px 30px 0

	&__square.author
		margin-bottom: 30px

	&__square.category
		margin 0 45px 22px 0

	&__square.sku
		margin-bottom: 22px

	&__buttons
		width 300px

	&__button
		width 140px
		height 46px

		h4
			font-size 16px
			line-height 47px

	&__button.red
		width 140px
		margin-bottom: 20px 0 0

	&__buttons
		width 100%

.community-listing-empty
	width 320px
	padding 10px
	border-radius: 8px

	h1
		font-size 19px
		line-height 30px

	p
		margin 0 0 20px 0
		font-size 16px
		line-height 25px

