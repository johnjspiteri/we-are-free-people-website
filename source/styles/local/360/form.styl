#community-consultation-form
	float: left
	width 310px
	padding 18px 0 0 30px
	margin-left: 9px
	background $accent-color
	border $red-border
	border-bottom $red-border-bottom
	border-radius $border-radius

	&__countryCode
		float left
		width 53px
		margin 0 2px 0 0
		padding 0

		input
			border-radius 4px 0px 0 4px
			border-right 2px solid $button

	&__phone
		float left
		width 224px
		margin 0
		padding 0

		input
			border-radius 0 6px 6px 0

	&__mask
		position: absolute
		width 280px
		margin: 0
		padding: 0
		height 50px
		background $field-color
		border-bottom $field-border-bottom
		border-radius $border-radius
		outline none
		cursor pointer
		-webkit-appearance none
		-moz-appearance none
		pointer-events none
		appearance none
		text-align: center;
		z-index: 99

		h4
			float left
			padding 0
			margin 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 16px
			width 100%
			color $black-color
			line-height 46px
			outline none
			cursor pointer
			-webkit-appearance none
			-moz-appearance none
			appearance none

	button
		float left
		width 280px
		height 48px
		padding 0
		margin 0 0 20px 0
		font-family $primary-font
		font-weight $primary-font-weight-400
		font-size 25px
		color $color-white
		background $accent-color
		border none
		border-bottom $red-border-bottom
		border-radius $border-radius
		text-align center
		outline none
		cursor pointer

	&__check
		position absolute
		padding 0
		margin-left: 14px
		font-size 21px
		line-height 15px
		color $color-white
		text-align center

	button[disabled]
		background $tertiary-color
		border none
		border-bottom $button-border-bottom

	&__method
		float: left
		width 280px

		select
			width 278px

	&__title
		float: left
		width 280px
		margin 0 0 20px 0

		h1
			float: left
			padding 0
			margin 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 18px
			line-height 18px
			color $color-white
			text-align center

	&__message
		width 280px
		margin 0
		padding 0
		border none;
		outline none;
		// background #f2f

		p
			width 100%
			font-size 16px
			line-height 20px
			padding-bottom: 12px
			margin 0 0 8px 0
			border-bottom rgba(57, 0, 26, 0.3)
			font-family $font-secondary
			font-weight $font-weight-secondary-500
			color $color-white
			text-align center

	&__submit
		float: left
		width 280px
		padding: 0
		margin 12px 0 0 0
		border-bottom rgba(57, 0, 26, 0.3)

		button
			float: left
			height 48px
			margin 0 0 20px 0
			padding: 0
			font-family $primary-font
			font-weight $primary-font-weight-400
			font-size 25px
			color $color-white
			background $button
			border none
			border-bottom $red-border-bottom
			border-radius $border-radius
			text-align center
			outline none
			cursor pointer

	&__button
		float: left
		width 280px
		height 46px
		background $accent-color
		border-radius $border-radius
		border-bottom 1px $red-border-bottom

		h6
			float left
			width 100%
			margin 0
			padding 0
			color $color-white
			text-align center
			font-size 20px
			line-height 44px
			background: $button

	&__id
		float: left
		width 280px
		margin 0
		padding 0
		outline none
		border none

		p
			font-size 12px
			font-style italic
			text-align center

.community-consultation-half
	float: left
	width 280px
	margin 0 0 20px 0
	padding 0

.community-consultation-field
	float left
	width 100%
	padding 0
	margin 0

	input
	select
	textarea
		float left
		padding 0
		margin 0
		font-family $primary-font
		font-weight $font-weight-primary-400
		font-size 18px
		border none
		box-shadow none
		outline none
		cursor pointer
		-webkit-appearance none
		-moz-appearance none
		appearance none
		border-radius $border-radius
		text-align center

	input
		width 100%
		background $field-color
		color $black-color
		height 44px

	select
		width 100%
		height 46px
		line-height 48px
		background $button
		border-radius $border-radius
		color $color-white

	textarea
		min-width 260px
		max-width 260px
		min-height 72px
		background $field-color
		color $black-color
		padding 10px 10px 14px 10px
		line-height 28px
		border none
		margin 0

.community-consultation-label
	width 100%
	margin 0 0 5px 0
	padding 0
	border none
	outline none
	text-align center

.community-consultation-full
	float left
	width 240px
	padding 0
	margin 0 0 20px 0
