#community-squares
	display grid
	float left
	grid-template-columns 1fr
	grid-template-rows auto
	width 360px
	margin 0 0 30px 0
	background $secondary-background-color
	border-top $secondary-border
	border-bottom $secondary-border

.community-square
	width 100%
	padding 24px 0 38px 0
	margin 0
	border-bottom $secondary-dotted-border

	&__row
		float left
		width 360px
		padding 0 20px 0 15px
		margin 0
		box-sizing border-box

		img
			float left
			width 285px
			height 160px
			margin 0 0 24px 0
			padding 0
			background $secondary-image-background-color
			border $secondary-image-border
			border-radius $radius

		h3
			float left
			padding-bottom: 8px
			margin 0 0 14px 0
			font-size 17px
			line-height 17px
			font-family $primary-font
			font-weight $primary-font-weight-400
			border-bottom $secondary-title-border-bottom
			color $secondary-title-color
			text-align left

		p
			float left
			width 100%
			padding 0
			margin 0
			font-size 14px
			line-height 26px
			font-family $primary-font
			font-weight $primary-font-weight-400
			color $secondary-paragraph-color
			text-align left

	&__buttonholder
		float left
		padding 10px
		width 340px

	&__button
		float left
		margin: 18px 0 0 0
		padding 6px 18px 8px 18px
		background $accent-color
		border-radius $radius
		border-bottom 1px $red-border-bottom

		h4
			float left
			width 100%
			margin 0
			padding 0
			font-family $primary-font
			font-size 14px
			font-style: italic
			font-weight $primary-font-weight-400
			line-height 20px
			color $secondary-button-text-color
			text-align center

.community-square:last-child
	border-bottom none
