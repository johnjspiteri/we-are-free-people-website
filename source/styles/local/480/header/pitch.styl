#header-pitch
	padding 0 0 10px 0

	&__container
		width 440px

		h1
			font-size 14px

		p
			font-size 13px
			line-height 20px

	&__title
		width 124px
		margin 0 14px 0 45px
		padding 9px 0 7px 13px

		h1
			line-height 20px

		h1.small
			display: none

		h1.medium
			display: block

	&__arrow
		margin 2px 0 0 6px
		font-size 17px

	&__time
		width: 226px
		margin: 6px 0 0 0

	&__paragraph
		margin 12px 0 12px 0
		padding 0 10px

	&__close
		width: 44px
		height: 44px

	&__triangle
		border-top: 44px solid $black-color
		border-left: 44px solid transparent;

	&__times
		width: 22px
		height: 22px
		font-size 18px

.header-pitch-square
	width: 70px
	margin 0 7px 0 0

	h3
		height 17px
		font-size 9px

	&__value
		width: 32px
		height: 36px
		margin 0 4px 0 0

	&__value:last-child
		margin: 0

	&__half
		width: 32px
		height: 18px

	&__number
		width 32px
		height 35px

		h4
			font-size 18px

.header-pitch-square:last-child
	margin: 0

.header-pitch-button
	width: 300px
	margin 0 0 0 70px
	padding 7px 0 9px 0
