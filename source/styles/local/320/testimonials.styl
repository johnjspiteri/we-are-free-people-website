#community-testimonials
	display grid
	grid-template-columns 1fr
	grid-template-rows auto
	width 100%
	margin-bottom: 50px
	background $color-secondary
	border-top $border-secondary

.community-testimonial
	width 100%
	padding 24px 20px 38px 20px
	margin 0
	border-bottom $border-secondary
	box-sizing border-box

	&__image
		float left
		width 65px
		height 65px
		margin 0 10px 0 0
		background $color-background
		border $border-secondary
		border-radius 1000%
		overflow hidden

		img
			float left
			width 100%
			height 100%
			padding 0
			margin 0

	p
		width 100%
		padding 0
		margin-bottom: 0 20px 0
		font-size 13px
		line-height 25px
		font-family $primary-font
		font-weight $font-weight-primary-400
		color $color-paragraph
		text-align left

	h6
		float right
		padding 0
		margin 0 40px 0 0
		font-size 16px
		line-height 16px
		font-family $primary-font
		font-weight $font-weight-primary-400
		color $color-black
