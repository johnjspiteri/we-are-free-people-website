#lga-header-banner
	float left
	width 100%
	padding 0
	margin 0 0 10px 0
	border-bottom $border-bottom-banner
	background $color-banner

	&__container
		position relative
		width 300px
		margin 0 auto
		padding 0

		h1
			float left
			width 100%
			margin 0
			padding 0
			font-family $font-primary
			font-weight $font-weight-primary-400
			font-size 17px
			line-height 35px
			color $color-black
			border none
			text-align center
