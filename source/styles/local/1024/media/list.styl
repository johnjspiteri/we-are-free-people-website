.lga-medias
	float left
	width 300px
	margin 0 0 10px 10px

.lga-media
	float left
	width 280px
	padding 20px 10px 26px 10px
	margin 0 0 20px 0
	background $color-white
	border $color-white-border
	border-radius 4px
	cursor pointer

	&__image
		float left
		width 280px
		height 210px
		padding 0
		margin 0 0 10px 0
		background #f2f2f2
		border $color-white-border
		border-radius 4px
		overflow hidden

		img
			float left
			width 100%
			height 100%

	h3
		float left
		width 100%
		margin 10px 0 12px 0px
		font-weight 400
		font-size 21px
		line-height 27px
		color $color-black

	h4
		float left
		padding 8px 14px 8px 14px
		margin 0 0 18px 0px
		font-weight 400
		font-size 12px
		line-height 12px
		color $color-white
		background $grey-gradient
		border-radius 4px

	p
		float left
		width 100%
		margin 0 5px 0 0px
		font-weight 400px
		font-size 16px
		line-height 26px
		color $color-paragraph

	p.blue
		color $color-paragraph
		margin 0
