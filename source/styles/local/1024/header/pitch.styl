#header-pitch
	padding 0 0 8px 0

	&__content
		width 984px

		p
			font-size 11px
			line-height 16px

		p.middle
			display block

		p.large
			display none

	&__title
		width 98px
		margin 0 10px 0 0
		padding 14px 10px 5px 14px

		h1
			font-size 12px
			line-height 17px

	&__arrow
		margin 0 0 0 6px
		font-size 18px

	&__time
		width 198px
		margin 0 10px 0 0

	&__paragraph
		width 184px
		margin 7px 10px 0 0
		padding 0

	&__review
		display block
		float left
		width 154px
		margin 7px 0 0 10px
		padding 0

		p
			font-size 11px
			line-height 16px
			text-align left

.header-pitch-square
	width: 62px
	margin 5px 6px 0 0

	h3
		height 15px
		font-size 9px

	&__value
		width: 29px
		height: 36px
		margin 0 4px 0 0

	&__value:last-child
		margin: 0

	&__half
		width: 29px
		height: 18px

	&__number
		width 29px
		height 37px

		h4
			font-size 16px

.header-pitch-square:last-child
	margin: 5px 0 0 0

.header-pitch-button
	width 150px
	margin 6px 0 0 0
	padding 7px 14px 5px 14px

	h2
		font-size 12px
		line-height 17px

.header-pitch-button:last-child
	display block
	width 150px
	margin 6px 0 0 10px
	background $tertiary-button-background-inactive-color
	border $tertiary-button-inactive-border
	border-bottom $tertiary-button-inactive-bottom-border

	h2
		color $tertiary-button-text-active-color
