#community-footer
	width 100%
	padding 28px 0 10px 0

	&__container
		width 984px

		h1
			margin-bottom: 11px
			font-size 17px
			line-height 18px

		h2
			margin 4px 0 24px 0
			font-size 14px
			line-height 15px

	&__company
		width 300px
		padding 0
		margin 0

	&__logo
		margin: 0 20px 20px 0
		padding: 0

	&__brand
		width 210px

	&__address
		width 100%
		padding 0
		margin 0

		.community-footer-address-line
			width 200px
			margin-bottom: 8px
			font-size 16px
			line-height 30px

	&__contact
		width 270px
		padding 0
		margin 0

		.community-footer-contact-line
			margin-bottom: 10px
			font-size 16px
			line-height 18px

	.community-footer-social
		width 244px
		margin: 0

		.community-footer-social-facebook
		.community-footer-social-twitter
		.community-footer-social-instagram
			margin 0
			font-size 20px
			line-height 22px

	&__about
		width 270px
		margin 0 0 14px 0

	&__cv
		width 100%
		padding-bottom: 20px
		margin 0

		p
			width 100%
			font-size 16px
			line-height 30px

	&__navigation
		width 360px
		padding 0
		margin 0 30px 0 0

		.community-footer-column
			margin: 0
			padding: 0

			&__button
				margin: 0

				h3
					padding: 0
					margin: 0 40px 50px 0
					font-size: 16px
					line-height 18px
