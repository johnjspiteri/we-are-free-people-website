{
	"$schema": "https://json.schemastore.org/tsconfig",
	"angularCompilerOptions": {
		"allowEmptyCodegenFiles": false,
		"enableIvy": true,
		"enableResourceInlining": true,
		"fullTemplateTypeCheck": true,
		"preserveSymlinks": true,
		"strictInjectionParameters": true,
		"strictTemplates": true
	},
	"buildOnSave": false,
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": "",
		"declaration": false,
		"downlevelIteration": true,
		"emitDecoratorMetadata": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["es2018", "dom"],
		"module": "es2020",
		"moduleResolution": "node",
		"noEmitHelpers": true,
		"noImplicitAny": true,
		"outDir": "development",
		"paths": {
			//			"@angular/*": ["node_modules/@angular/*"],
			//			"@fortawesome/*": ["./node_modules/@fortawesome/*"],
			//			"@interface-agency/title-case-pipe": ["../title-case-pipe/public"],
			"_application/*": ["source/application/*"]
		},
		"pretty": true,
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es2015",
		"typeRoots": ["node_modules/@types"],
		"types": ["node", "webpack"]
	},
	"exclude": [
		"build",
		"configuration.ts",
		"node_modules",
		"source/application/common/store/loader/editor/selectors.ts",
		"source/application/shared/validators/filetype.ts",
		"source/application/subscribe/**/*.ts",
		"source/application/store/subscription/**",
		"source/application/subscribe/payment/crypto/guard.ts",
		"source/application/subscribe/payment/crypto/service.ts",
		"source/application/subscribe/payment/crypto/complete/guard.ts",
		"source/application/subscribe/payment/crypto/expired/guard.ts",
		"source/production.ts",
		"source/application/company/contact/request/service.ts",
		"source/application/company/career/find/application/service.ts",
		"source/application/demo/request/service.ts",
		"source/application/industry/automotive/new-car-dealer/website/preview/theme-a/client/**/*.ts",
		"source/application/industry/automotive/new-car-dealer/website/preview/theme-b/client/**/*.ts",
		"source/application/industry/automotive/new-car-dealer/website/preview/shared/**/*.ts",
		"source/application/industry/automotive/used-car-dealer/website/preview/theme-a/client/**/*.ts",
		"source/application/industry/automotive/used-car-dealer/website/preview/theme-b/client/**/*.ts",
		"source/application/industry/automotive/used-car-dealer/website/preview/shared/**/*.ts",
		"source/application/industry/automotive/mechanic/website/preview/theme-a/client/**/*.ts",
		"source/application/industry/automotive/mechanic/website/preview/theme-b/client/**/*.ts",
		"source/application/industry/automotive/mechanic/website/preview/shared/**/*.ts",
		"source/application/industry/legal/criminal-lawyer/website/preview/theme-a/client/**/*.ts",
		"source/application/industry/legal/criminal-lawyer/website/preview/theme-b/client/**/*.ts",
		"source/application/industry/legal/criminal-lawyer/website/preview/shared/**/*.ts",
		"source/application/industry/legal/family-lawyer/website/preview/theme-a/client/**/*.ts",
		"source/application/industry/legal/family-lawyer/website/preview/theme-b/client/**/*.ts",
		"source/application/industry/legal/family-lawyer/website/preview/shared/**/*.ts",
		"source/application/industry/legal/immigration-lawyer/website/preview/theme-a/client/**/*.ts",
		"source/application/industry/legal/immigration-lawyer/website/preview/theme-b/client/**/*.ts",
		"source/application/industry/legal/immigration-lawyer/website/preview/shared/**/*.ts",
		"source/application/industry/legal/paralegal/website/preview/theme-a/client/**/*.ts",
		"source/application/industry/legal/paralegal/website/preview/theme-b/client/**/*.ts",
		"source/application/industry/legal/paralegal/website/preview/shared/**/*.ts",
		"tsconfig.production.json"
	]
}
